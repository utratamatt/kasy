:root{
    --section-gradient-1: #005f8c ;
    --section-gradient-2: #00b9be ;
    --sidebar-bg-clr: #002b59;
}
@import url('https://fonts.googleapis.com/css2?family=Nunito&family=Rubik:ital,wght@0,600;1,800&display=swap');

body.menu-preload *{
    animation-duration: 0s !important;
    -webkit-animation-duration: 0s !important;
    transition:background-color 0s, opacity 0s, color 0s, width 0s, height 0s, padding 0s, margin 0s !important;
}

*{
    margin: 0;
    padding: 0;
    color: white;
    font-family: 'Rubik', sans-serif;
    font-weight: 600;
}


html, body{
    min-height: 99.5%;
    margin: 5px;
    background-image: url(../Images/logo.png), url(../Images/logo.png), linear-gradient(to bottom right, var(--section-gradient-1), var(--section-gradient-2));
    background-attachment: fixed,fixed,fixed;
    background-repeat: no-repeat,no-repeat,no-repeat;
    background-position: 43vw 10vh, -31.5vw 10vh, 100%;
    background-size: contain;
}

#heading-user{
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    margin-bottom: 50px;
}

#heading{
    font-size: 1.5rem;
    grid-column-start: 2;
    justify-self: center;
    align-self: center;
    text-align: center;
}
#heading2{
    font-size: 1.7rem;
    grid-column-start: 2;
    justify-self: center;
    align-self: center;
    text-align: center;
	margin-top: 50px;
	margin-bottom:15px;
	
}

#cena{
	font-size:1rem;
	text-align: center;
	color: grey;
	margin-top: 30px;

}
#info
{ 
	text-align: center;
	margin-top: 50px;
}
h4{
	font-size:2rem;
	color: yellow;
}

#logged-user{
    position: fixed;
    top: 10px;
    justify-self: end;
    align-self: center;
    font-size: 2rem;
}

#logged-user-icon{
    padding-left: 27.5px;
    font-size: 3.5rem;
}
#logged-user-icon i:not(:hover){
    transition: color 0.5s ease;
}
#logged-user-icon i:hover{
    color: #00b9be;
    transition: color 0.5s ease;
}

#logged-user p{
    padding-right: 10px;
    color: inherit;
}

.content{
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    
}
.dane-tabele{
    justify-self: stretch;
    align-self: center;
    border-collapse: collapse;
}

.dane-tabele td,th{  
    padding: 10px;
    text-align: center;
}
.dane-tabele tr:not(:last-child){
    border-bottom: 2px #002b59 groove;
}

.dane-tabele th , .dane-tabele p{
    font-style: italic;
    font-size: 1.3rem;
    color: #032c58;
}

.dane-tabele td, .dane-tabele th:not(:last-child){
    border-right: 2px #002b59 groove;
}

.dane-tabele-button{
    background-color:#002b59;
    border-radius: 5px;
    border: none;
    font-size: 1.1rem;
    padding-block: 2px;
    padding-inline: 5px;
	margin:3px;
}

.dane-tabele-button:hover{
    background-color: rgba(0, 43, 89, 0.5);
}

.dane-uzytkownicy{
    justify-self: stretch;
    align-self: center;
    border-collapse: collapse;
}

.dane-uzytkownicy th{
    font-style: italic;
    font-size: 1.3rem;
    color: #032c58;
}

.dane-uzytkownicy tr{
    height: auto;
    margin:0;
    padding:0;
}

.dane-uzytkownicy td,th{  
    padding: 10px;
    text-align: center;
}

.dane-uzytkownicy tr:not(:last-child){
    border-bottom: 2px #002b59 groove;
}

.dane-uzytkownicy td:not(:last-child), .dane-uzytkownicy th:not(:last-child){
    border-right: 2px #002b59 groove;
}

.dane-uzytkownicy td{
    padding: 0px;
}

.dane-uzytkownicy input{
    width: 100%;
    padding-block: 9px;
    border-radius: 0px;
    color: #002b59;
    border: none;
    background-color:rgba(0, 95, 140, 0.1);
    font-size: 1.3rem;
}

.dane-uzytkownicy input:hover{
    color: #9ff4e5;
    background-color:rgba(0, 95, 140, 0.6);
}

.button-dodaj-uzytkownika{
    grid-row-start: 2;
    grid-column-start: 2;
    justify-self: center;
    margin: 20px;
}

.button-dodaj-uzytkownika input{
    padding: 20px;
    font-size: 2rem;
    background: url(../Images/user-add-icon.png) no-repeat scroll -60px -12px;
    padding-left:60px;
    background-color:rgba(0, 95, 140, 0.1);
    border-radius: 25px;
    background-size: 175px;
    color: #002b59;
    border: #00b9be 2px solid;
}

.button-dodaj-uzytkownika input:hover{
    color: #9ff4e5;
    background-color:rgba(0, 95, 140, 0.6);
}

#formularz-dodawania{
    grid-row-start: 3;
    grid-column-start: 2;
    justify-self: center;
}

.formularz-heading{
    display: inline-block;
    min-width: 110px;
    font-size: 20px;
}

.formularz-heading-klient{
    display: inline-block;
    min-width: 131px;
    font-size: 20px;
}

#formularz-zapisz{
    margin-top: 20px;
    text-align: center;
}
.button{
    background-color:rgba(0, 95, 140, 0.1);
    border-radius: 25px;
    color: #002b59;
    border: #00b9be 2px solid;
    font-size: 1.8rem;
    padding: 15px;
    min-width: 40%;
}

.button-usun{
    background-color:rgba(0, 95, 140, 0.1);
    border-radius: 25px;
    color: #002b59;
    border: #00b9be 2px solid;
    font-size: 1.8rem;
    padding: 5px;
	margin:5px;
    min-width: 5%;
}
.button:hover{
    color: #9ff4e5;
    background-color:rgba(0, 95, 140, 0.6);
}

.position-middle-row1{
    grid-row-start: 1;
    grid-column-start: 2;
    text-align: center;
}

.dane-input{
    background-color:#005f8c;
    border-radius: 4px;
    font-size: 1.1rem;
    padding-block: 2px;
    padding-inline: 5px;
    margin-top: 5px; 
    border: #00b9be 1px solid;
    margin-left: 5px;
}

.dane-input-zadania{
    background-color:#005f8c;
    border-radius: 4px;
    font-size: 1.1rem;
    padding-block: 2px;
    padding-inline: 5px;
    margin-top: 5px; 
    border: #00b9be 1px solid;
    margin-left: 5px;
	width:600px;
}


#dodaj-przeglad, #dodaj-kase, #dodaj-zadanie h2{
    text-align: center;
    justify-self: center;
}

#dodaj-przeglad h2, #dodaj-kase h2, #dodaj-zadanie h2{
    font-style: italic;
    font-size: 2rem;
    margin-bottom: 20px;
}

#dodaj-zadanie div{
    width: 50%;
    margin: auto;
}
#dodaj-zadanie input{
    width: 30%;
    min-height: 40px;
}

.button-dodaj input{
    margin-top: 10px;
}

